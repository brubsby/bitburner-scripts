export async function main(ns) {
  while (true) {
    while (ns.hacknet.numHashes() > ns.hacknet.hashCapacity() - max_buffer) {
      ns.hacknet.spendHashes("Sell for Money")
    }
    await ns.sleep(1000);
  }
}
